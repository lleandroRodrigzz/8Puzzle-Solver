<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1200.0"
            prefHeight="700.0" prefWidth="1200.0"
            style="-fx-background-color: #1a1f2e;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.unoeste.alo8puzzle.EightPuzzleController">

    <top>
        <VBox alignment="CENTER" spacing="20.0"
              style="-fx-background-color: #1a1f2e; -fx-border-color: #2a3142; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="30.0" bottom="20.0" />
            </padding>
            <children>
                <Label text="Solucionador 8-Puzzle"
                       style="-fx-text-fill: #ffffff; -fx-font-weight: bold;">
                    <font>
                        <Font size="42.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="80.0"
              style="-fx-background-color: #1a1f2e;">
            <padding>
                <Insets top="40.0" bottom="40.0" left="40.0" right="40.0" />
            </padding>
            <children>
                <!-- Left Panel - Controls -->
                <VBox spacing="20.0" prefWidth="320.0">
                    <children>
                        <Label text="Digite o estado inicial, de cima para baixo, da direita para a esquerda, 10 caracteres, ex: &quot;0123456678&quot;"
                               wrapText="true"
                               style="-fx-text-fill: #a0aec0; -fx-font-size: 13px;">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </Label>
                        <TextField fx:id="initialStateField"
                                   promptText="218635740"
                                   style="-fx-background-color: #2d3748; -fx-text-fill: #ffffff;
                                          -fx-prompt-text-fill: #718096; -fx-background-radius: 8;
                                          -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;
                                          -fx-border-color: transparent; -fx-border-width: 2;">
                        </TextField>

                        <Label text="Insira o estado final"
                               style="-fx-text-fill: #a0aec0; -fx-font-size: 13px;">
                            <padding>
                                <Insets top="10.0" bottom="5.0" />
                            </padding>
                        </Label>
                        <TextField fx:id="goalStateField"
                                   text="123456780"
                                   style="-fx-background-color: #2d3748; -fx-text-fill: #ffffff;
                                          -fx-prompt-text-fill: #718096; -fx-background-radius: 8;
                                          -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;
                                          -fx-border-color: transparent; -fx-border-width: 2;">
                        </TextField>

                        <Label text="Escolha o Algoritimo"
                               style="-fx-text-fill: #a0aec0; -fx-font-size: 13px;">
                            <padding>
                                <Insets top="10.0" bottom="5.0" />
                            </padding>
                        </Label>
                        <ComboBox fx:id="algorithmComboBox"
                                  prefWidth="320.0" maxWidth="320.0"
                                  style="-fx-background-color: #2d3748; -fx-text-fill: #ffffff;
                                         -fx-background-radius: 8; -fx-border-radius: 8;
                                         -fx-padding: 8; -fx-font-size: 14px;" />

                        <Region prefHeight="20.0" />

                        <Button fx:id="shuffleButton"
                                text="Embaralhar o Puzzle"
                                prefWidth="320.0" maxWidth="320.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #ffffff;
                                       -fx-border-color: #4a5568; -fx-border-width: 2;
                                       -fx-background-radius: 8; -fx-border-radius: 8;
                                       -fx-padding: 12; -fx-font-size: 14px; -fx-font-weight: bold;
                                       -fx-cursor: hand;">
                        </Button>

                        <Button fx:id="solveButton"
                                text="Resolver o Puzzle"
                                prefWidth="320.0" maxWidth="320.0"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: #ffffff;
                                       -fx-background-radius: 8; -fx-border-radius: 8;
                                       -fx-padding: 12; -fx-font-size: 14px; -fx-font-weight: bold;
                                       -fx-cursor: hand;">
                        </Button>
                    </children>
                </VBox>

                <!-- Center Panel - Puzzle Grid -->
                <VBox alignment="CENTER" spacing="25.0">
                    <children>
                        <GridPane fx:id="puzzleGrid"
                                  hgap="10.0" vgap="10.0"
                                  prefHeight="360.0" prefWidth="360.0"
                                  alignment="CENTER"
                                  style="-fx-background-color: transparent;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="110.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="110.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="110.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="110.0" prefHeight="110.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="110.0" prefHeight="110.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="110.0" prefHeight="110.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>

                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="prevButton"
                                        text="◄ Voltar"
                                        style="-fx-background-color: #2d3748; -fx-text-fill: #ffffff;
                                               -fx-background-radius: 8; -fx-border-radius: 8;
                                               -fx-padding: 10 20 10 20; -fx-font-size: 14px;
                                               -fx-cursor: hand;">
                                </Button>
                                <Button fx:id="nextButton"
                                        text="Avançar ►"
                                        style="-fx-background-color: #2d3748; -fx-text-fill: #ffffff;
                                               -fx-background-radius: 8; -fx-border-radius: 8;
                                               -fx-padding: 10 20 10 20; -fx-font-size: 14px;
                                               -fx-cursor: hand;">
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Right Panel - Results -->
                <VBox spacing="15.0" prefWidth="320.0">
                    <children>
                        <Label text="Resutados"
                               style="-fx-text-fill: #60a5fa; -fx-font-size: 28px; -fx-font-weight: bold;">
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </Label>

                        <Label fx:id="statusLabel"
                               text="Aguardando entrada do usuário..."
                               wrapText="true"
                               style="-fx-text-fill: #48bb78; -fx-font-size: 14px; -fx-font-weight: bold;">
                            <padding>
                                <Insets bottom="15.0" />
                            </padding>
                        </Label>

                        <HBox spacing="8.0">
                            <children>
                                <Label text="Duração da execução:"
                                       style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <Label fx:id="durationLabel"
                                       text="N/A"
                                       style="-fx-text-fill: #cbd5e0; -fx-font-size: 14px;" />
                            </children>
                        </HBox>

                        <HBox spacing="8.0">
                            <children>
                                <Label text="Nós expandidos:"
                                       style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <Label fx:id="expandedNodesLabel"
                                       text="N/A"
                                       style="-fx-text-fill: #cbd5e0; -fx-font-size: 14px;" />
                            </children>
                        </HBox>

                        <HBox spacing="8.0">
                            <children>
                                <Label text="Profundidade da pesquisa :"
                                       style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <Label fx:id="searchDepthLabel"
                                       text="N/A"
                                       style="-fx-text-fill: #cbd5e0; -fx-font-size: 14px;" />
                            </children>
                        </HBox>

                        <HBox spacing="8.0">
                            <children>
                                <Label text="Custo do caminho :"
                                       style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <Label text="N/A"
                                       style="-fx-text-fill: #cbd5e0; -fx-font-size: 14px;" />
                            </children>
                        </HBox>

                        <Label text="▶ Caminho para a meta:"
                               style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px; -fx-font-weight: bold;">
                            <padding>
                                <Insets top="15.0" bottom="5.0" />
                            </padding>
                        </Label>

                        <TextArea fx:id="pathTextArea"
                                  editable="false"
                                  prefHeight="200.0"
                                  wrapText="true"
                                  style="-fx-control-inner-background: #2d3748; -fx-text-fill: #cbd5e0;
                                         -fx-background-color: #2d3748; -fx-background-radius: 8;
                                         -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 13px;
                                         -fx-font-family: 'Courier New', monospace;
                                         -fx-border-color: transparent; -fx-border-width: 2;" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
